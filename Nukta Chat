<head>
  <meta charset="UTF-8" />
  <title>Nukta Chat</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      font-family: sans-serif;
      padding: 2rem;
      max-width: 600px;
      margin: auto;
      background: #fefefe;
    }
    .bubble {
      margin: 1rem 0;
      padding: 1rem;
      border-radius: 1rem;
      background: #eee;
    }
    .bubble.user { text-align: right; background: #cce5ff; }
    .input-area {
      display: flex;
      margin-top: 1rem;
    }
    input {
      flex: 1;
      padding: 0.5rem;
    }
    button {
      padding: 0.5rem 1rem;
    }
  </style>
</head>
<body>
  <h1>Nukta Chat</h1>

  <div id="chat">
    <div class="bubble">Esselamu alejkum, ja sam Nukta – postavi mi pitanje ili reci: “Vodi me zikrom.”</div>
  </div>

  <div class="input-area">
    <input type="text" id="question" placeholder="Postavi pitanje..." />
    <button onclick="sendMessage()">Pošalji</button>
  </div>

  <script>
    function sendMessage() {
      const input = document.getElementById('question');
      const chat = document.getElementById('chat');
      const msg = input.value.trim();
      if (!msg) return;

      const userBubble = document.createElement('div');
      userBubble.className = 'bubble user';
      userBubble.innerText = msg;
      chat.appendChild(userBubble);

      const replyBubble = document.createElement('div');
      replyBubble.className = 'bubble';
      replyBubble.innerText = '🌙 Hvala na pitanju. Nukta će uskoro odgovarati duhovno kroz AI.';
      chat.appendChild(replyBubble);

      input.value = '';
    }
  </script>
</body>
</html>
