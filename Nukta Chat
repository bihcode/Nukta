  <h1>Nukta Chat</h1>
  <p>Pitaj srcem. Odgovor dolazi saburom.</p>

  <div id="chat-box"></div>

  <div id="user-input">
    <input type="text" id="question" placeholder="Postavi pitanje..."/>
    <button onclick="sendMessage()">Pošalji</button>
  </div>

  <a href="index.html">⇦ Povratak na početak</a>

  <script>
    function sendMessage() {
      const input = document.getElementById("question");
      const chat = document.getElementById("chat-box");

      const userMsg = input.value.trim();
      if (!userMsg) return;

      const userElement = document.createElement("div");
      userElement.className = "msg";
      userElement.innerHTML = `<span class="user">Ti:</span> ${userMsg}`;
      chat.appendChild(userElement);

      const botElement = document.createElement("div");
      botElement.className = "msg";
      botElement.innerHTML = `<span class="bot">Nukta:</span> ...`;
      chat.appendChild(botElement);

      chat.scrollTop = chat.scrollHeight;
      input.value = "";

      // Simulacija odgovora (dok ne povežemo s GPT-jem)
      setTimeout(() => {
        botElement.innerHTML = `<span class="bot">Nukta:</span> <em>“Sjeti se Allaha i On će se tebe sjetiti.”</em>`;
        chat.scrollTop = chat.scrollHeight;
      }, 1200);
    }
  </script>

